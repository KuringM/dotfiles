#!/bin/env bash

while getopts ":abc" o; do case "${o}" in
	a) notify-send "This Month" "$(cal --color=always | sed "s/..7m/<b><span color=\"red\">/;s/..27m/<\/span><\/b>/")
$(date "+%Y/%b/%d %I:%M%p")" && notify-send "Appointments" "$(calcurse -d3 -t)" ;;
	b) notify-send "ðŸ–¥ CPU hogs" "$(ps axch -o cmd:15,%cpu --sort=-%cpu | head)\\n(100% per core)" && notify-send "ðŸ§  Memory hogs" "$(ps axch -o cmd:15,%mem --sort=-%mem | head)" && notify-send "ðŸ’½ Disk space" "$(df -h --output=target,used,size)" ;;
	c) setsid -f st -e gotop ;;
esac done
